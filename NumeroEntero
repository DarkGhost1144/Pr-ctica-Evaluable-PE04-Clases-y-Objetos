/**
 * Clase NumeroEntero que representa un numero entero con algunas operaciones utiles.
 * Permite comparar, obtener el signo y convertir a decimal.
 * Incluye valores estaticos para el maximo y minimo permitido.
 * 
 * @author  JKur
 * @version  1.0
 * @see String
 */
public class NumeroEntero {

    private int valor;                        // Valor del numero
    public static final int valorMaximo = Integer.MAX_VALUE; // Valor maximo permitido
    public static final int valorMinimo = Integer.MIN_VALUE; // Valor minimo permitido

    /**
     * Constructor que inicializa el valor y lo limita entre valorMinimo y valorMaximo.
     * 
     * @param valor valor inicial
     */
    public NumeroEntero(int valor) {
        this.valor = valor;

        // Limitamos el valor a los maximos permitidos
        if (this.valor > valorMaximo) {
            this.valor = valorMaximo;
        } else if (this.valor < valorMinimo) {
            this.valor = valorMinimo;
        } else {
            this.valor = valor;
        }
    }

    /**
     * Compara el valor del objeto con otro numero entero.
     * 
     * @param numero numero con el que se compara
     * @return 1 si es mayor, -1 si es menor, 0 si son iguales
     */
    public int compareTo(Integer numero) {
        if (this.valor > numero) {
            return 1;
        } else if (this.valor < numero) {
            return -1;
        } else {
            return 0;
        }
    }

    /**
     * Getter del valor del numero entero.
     * 
     * @return valor entero
     */
    public int getValor() {
        return valor;
    }

    /**
     * Devuelve el signo del numero.
     * 
     * @return 1 si es positivo, -1 si es negativo, 0 si es cero
     */
    public int signo() {
        if (valor > 0) {
            return 1;
        } else if (valor < 0) {
            return -1;
        } else {
            return 0;
        }
    }

    /**
     * Convierte el numero entero a decimal (double).
     * 
     * @return valor decimal
     */
    public double getValorDecimal() {
        return (double) valor;
    }

    /**
     * Metodo toString para devolver el valor como cadena.
     * 
     * @return cadena con el valor del numero
     */
    public String toString() {
        return String.valueOf(valor);
    }
}

/**
 * Clase Main para probar la clase NumeroEntero.
 * Se crean varios numeros, se muestran, se obtiene el signo, se comparan y se convierten a decimal.
 * 
 * @author  JKur
 * @version  1.0
 * @see NumeroEntero
 */
public class Main {

    public static void main(String[] args) {

        // Creamos varios numeros enteros
        NumeroEntero n1 = new NumeroEntero(150);
        NumeroEntero n2 = new NumeroEntero(-300);
        NumeroEntero n3 = new NumeroEntero(0);

        // Mostramos los numeros usando toString
        System.out.println("n1: " + n1);
        System.out.println("n2: " + n2);
        System.out.println("n3: " + n3);

        // Mostramos el signo de cada numero
        System.out.println("Signo de n1: " + n1.signo());
        System.out.println("Signo de n2: " + n2.signo());
        System.out.println("Signo de n3: " + n3.signo());

        // Comparamos con otros numeros
        System.out.println("n1 comparado con 100: " + n1.compareTo(100));
        System.out.println("n2 comparado con -500: " + n2.compareTo(-500));
        System.out.println("n3 comparado con 0: " + n3.compareTo(0));

        // Convertimos n1 a decimal
        System.out.println("n1 en decimal: " + n1.getValorDecimal());
    }
}
